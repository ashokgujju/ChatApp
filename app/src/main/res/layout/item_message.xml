<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginEnd="@dimen/msg_layout_end_margin"
             android:layout_marginStart="@dimen/def_margin"
             android:layout_marginTop="@dimen/four_units_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_background_shape"
        android:orientation="vertical"
        android:padding="@dimen/def_margin">

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/four_units_margin"
            android:layoutDirection="ltr"
            android:textAppearance="?attr/textAppearanceListItem"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            android:textSize="12sp"/>
    </LinearLayout>

</FrameLayout>
